# Claude API (Anthropic)
# Get it from: https://console.anthropic.com/settings/keys
CLAUDE_API_KEY=your_claude_api_key_here

# Google Gemini API
# Get it from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Financial Modeling Prep API
# Get it from: https://site.financialmodelingprep.com/developer/docs
# Free tier: 250 requests/day
FMP_API_KEY=your_fmp_api_key_here

# ====================================
# üí≥ Stripe Payment Configuration
# ====================================

# Stripe Secret Key
# Get it from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_API_KEY=your_stripe_secret_key_here

# Stripe Publishable Key (Public)
# Get it from: https://dashboard.stripe.com/test/apikeys
NEXT_PUBLIC_PUBLISHABLE_STRIPE_API_KEY=your_stripe_publishable_key_here

# Stripe Webhook Secret
# Get it from: https://dashboard.stripe.com/test/webhooks
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ====================================
# üîí Clerk Authentication
# ====================================

# Clerk Publishable Key
# Get it from: https://dashboard.clerk.com/ > Your App > API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Clerk Secret Key
# Get it from: https://dashboard.clerk.com/ > Your App > API Keys
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Clerk Sign In/Up URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# ====================================
# üóÑÔ∏è Database Configuration
# ====================================

# Neon PostgreSQL Database URL
# Get it from: https://console.neon.tech/ > Your Project > Connection Details
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL=your_neon_database_url_here

# ====================================
# üåê Application Configuration
# ====================================

# Server URL (for Stripe redirects)
# Development: http://localhost:3000
# Production: https://your-domain.com
